@model CustomerAVS.Models.customer

@{
    ViewBag.Title = "Eliminar Cliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card card-danger">
    <div class="card-header">
        <h3 class="card-title"><i class="fas fa-trash-alt"></i> Eliminar Cliente</h3>
    </div>

    <div class="card-body">
        <div class="alert alert-warning">
            <p>¿Estás seguro de que deseas eliminar al cliente <strong>@Model.FirstName @Model.LastName</strong>?</p>
        </div>

        @using (Html.BeginForm("Delete", "Customer", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.ID)

            <div class="form-group">
                <button type="submit" class="btn btn-danger btn-block">
                    <i class="fas fa-trash-alt"></i> Confirmar Eliminación
                </button>
            </div>
            <div class="form-group">
                <a href="@Url.Action("Index")" class="btn btn-secondary btn-block">
                    <i class="fas fa-times"></i> Cancelar
                </a>
            </div>
        }
    </div>
</div>
